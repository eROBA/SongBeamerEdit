<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="navFirst">
        <Image Name="imgFirst">
            <Image.Style>
                <Style TargetType="Image">
                    <Setter Property="Source" Value="..\Images\first.png" />
                </Style>
            </Image.Style>
        </Image>
        <ControlTemplate.Triggers>
            <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Source" Value="..\Images\first_dis.png" TargetName="imgFirst" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

